    <li class="nav-item">
        <a class="nav-link" href="/Tips/Tips">Компьютерная грамотность</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="/Cats/List">Неко котики<span class="sr-only">(current)</span></a>
    </li>
}